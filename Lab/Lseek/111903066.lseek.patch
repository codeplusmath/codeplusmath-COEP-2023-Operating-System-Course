+
+int
+sys_lseek(void)
+{
+	struct file * fp;
+	uint newoff, file_size, whence;
+	int offset;
+
+	newoff = 0;
+
+	if(argfd(0, 0, &fp) < 0 || 
+		argint(1, &offset) < 0 || 
+		argint(2, (int *)&whence) < 0) return -1;
+	
+	if(fp->type != FD_INODE) return 0;
+	
+	ilock(fp->ip);
+	file_size = fp->ip->size;
+	iunlock(fp->ip);
+	
+	switch(whence){
+		case SEEK_SET:
+			newoff = 0;
+			break;
+		case SEEK_CUR:
+			newoff = fp->off;
+			break;
+		case SEEK_END:
+			newoff = file_size;
+			break;
+		default:
+			return -1;
+			break;
+	}
+
+	if(((newoff + offset)<0) || ((newoff + offset)< file_size)) return -1;
+
+	fp->off = newoff + offset;
+	return fp->off;
+}
